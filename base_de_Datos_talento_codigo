create database Talento

use Talento

create table TBLTALENT(
tal_cod VARCHAR(20) PRIMARY KEY,
fir_nam VARCHAR(20) not null,
las_nam VARCHAR(20) not null,
tel VARCHAR(15) not null,
bir_day date );

CREATE TABLE TBLCOACH(
coa_cod VARCHAR(20) PRIMARY KEY,
fir_nam VARCHAR(20) not null,
las_mam VARCHAR(20) not null,
tel VARCHAR(20) not null unique
);

CREATE TABLE TBLSTUDY_GROUP(
stu_cod VARCHAR(20) PRIMARY KEY,
gro_nam VARCHAR(20) not null unique,
wor_hou int(2) not null,
stu_tal_cod VARCHAR(20),
stu_coa_cod VARCHAR(20),
FOREIGN KEY(stu_tal_cod) REFERENCES TBLTALENT (tal_cod),
FOREIGN KEY(stu_coa_cod) REFERENCES TBLCOACH (coa_cod)
 );

CREATE TABLE TBLACADEMY_INFORMATION(
aca_cod VARCHAR(20) PRIMARY KEY,
ach VARCHAR(20) not null,
yea date not null,
aca_tal_cod VARCHAR(20),
FOREIGN KEY(aca_tal_cod) REFERENCES TBLTALENT(tal_cod)
);

CREATE TABLE TBLWORK_EXPERIENCE(
wor_cod VARCHAR(20) PRIMARY KEY,
yea date not null,
top varchar(20) not null,
wor_tal_cod VARCHAR(20),
FOREIGN KEY(wor_tal_cod) REFERENCES TBLTALENT(tal_cod)
);

CREATE TABLE TBLWORKING_DAY(
wor_cod VARCHAR(10) PRIMARY KEY,
kin VARCHAR(15) not null,
wor_stu_cod VARCHAR(20),
FOREIGN KEY (wor_stu_cod) REFERENCES TBLSTUDY_GROUP(stu_cod)
);

CREATE TABLE TBLTOPICS(
top_cod VARCHAR(20) PRIMARY KEY,
top VARCHAR(20) not null,
top_stu_cod VARCHAR(20),
FOREIGN KEY(top_stu_cod) REFERENCES TBLSTUDY_GROUP(stu_cod)
);

CREATE TABLE TBLADVISORY(
adv_code VARCHAR(20) PRIMARY KEY,
dat VARCHAR(20) not null,
adv_coa_cod VARCHAR(20),
adv_tal_cod VARCHAR(20),
FOREIGN KEY(adv_coa_cod) REFERENCES TBLCOACH(coa_cod),
FOREIGN KEY(adv_tal_cod) REFERENCES TBLTALENT(tal_cod)
);

